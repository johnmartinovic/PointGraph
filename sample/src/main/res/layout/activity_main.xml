<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_background_color"
    tools:context="com.johnnym.pointgraph.sample.MainActivity">

    <Button
        android:id="@+id/btn_demo_la_grange"
        android:layout_width="@dimen/main_demo_button_width"
        android:layout_height="wrap_content"
        android:text="@string/la_grange_demo_label_text"
        app:layout_constraintBottom_toTopOf="@id/btn_demo_graph_end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_demo_graph_end"
        android:layout_width="@dimen/main_demo_button_width"
        android:layout_height="wrap_content"
        android:text="@string/graph_end_demo_label_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_demo_la_grange"/>

</android.support.constraint.ConstraintLayout>
